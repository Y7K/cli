#!/usr/bin/env php
<?php

if(file_exists(__DIR__ . '/../../autoload.php')) {
  require __DIR__ . '/../../autoload.php';
} else {
  require __DIR__ . '/vendor/autoload.php';
}

ini_set('display_errors', 1);

$app = new Symfony\Component\Console\Application('Y7K CLI', '0.0.0');

// Install Commands
$app->add(new \Y7K\Cli\Commands\Version());
$app->add(new \Y7K\Cli\Commands\Bump());

$app->add(new \Y7K\Cli\Commands\NewCommand());
$app->add(new \Y7K\Cli\Commands\Install\Craft());
$app->add(new \Y7K\Cli\Commands\Install\Laravel());
$app->add(new \Y7K\Cli\Commands\Install\Plain());

$app->run();
